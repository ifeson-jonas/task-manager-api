{
  "name": "task-manager-api",
  "version": "1.0.0",
  "description": "API RESTful para gerenciamento de tarefas com autenticação JWT",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --coverage --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "migrate": "node src/database/migrate.js",
    "prepare": "husky install",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "REST",
    "API",
    "task-manager",
    "Express",
    "SQLite"
  ],
  "author": "Jonas",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
